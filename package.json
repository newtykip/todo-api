{
  "name": "todo",
  "description": "I don't have a real name yet aaaa",
  "private": true,
  "version": "1.0.0",
  "main": "dist/index.js",
  "author": "newtykins",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-nodemon",
    "prod": "npm run build && npm run pm2:start",
    "pm2:start": "cross-env NODE_ENV=production pm2 start node dist/index.js",
    "pm2:pause": "pm2 stop",
    "pm2:stop": "pm2 delete",
    "pm2:restart": "pm2 restart",
    "build": "tsc",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "prepare": "husky install",
    "release": "standard-version",
    "prisma": "prisma db pull && prisma generate"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint src --ext .ts --fix",
      "git add ."
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@trongnd/ts-nodemon": "^1.0.3",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.6",
    "@types/express": "^4.17.13",
    "@types/express-jwt": "^6.0.2",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/node": "^16.3.3",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "commitizen": "^4.2.4",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.31.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.1",
    "pm2": "^5.1.0",
    "prisma": "^2.27.0",
    "rimraf": "^3.0.2",
    "standard-version": "^9.3.1",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@prisma/client": "^2.27.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-winston": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "winston": "^3.3.3"
  }
}
